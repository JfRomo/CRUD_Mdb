{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>No.</th>
      <th>Título</th>
      <th>Descripción</th>
      <th>Operaciones</th>
    </tr>
  </thead>

  <tbody>
    {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
          {{#if done}}
            <button onclick="location.href='/tasks/{{_id}}/toggleDone'" class="btn btn-warning" type="button">Pendiente</button>
          {{else}}
            <button onclick="location.href='/tasks/{{_id}}/toggleDone'" class="btn btn-success" type="button">Hecho</button>
          {{/if}}
            <button onclick="location.href='/tasks/{{_id}}/edit'" class="btn btn-secondary" type="button">Editar</button>
            <button onclick="location.href='/tasks/{{_id}}/delete'" class="btn btn-danger" type="button">Eliminar</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
  {{else}}
          <div class="text-center text-white bg-dark">
            <h1>No se encontraron tareas</h1>
            <img src="img/s-l400.jpg" alt="Emptiness" srcset="">
          </div>
{{/if}}