<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h2>Edita la tarea</h2>
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <label for="title">Título</label>
          <input
            type="text"
            name="title"
            placeholder="Título"
            value="{{task.title}}"
            class="form-control rounded-0 bg-dark text-white"
          />
          <label for="description">Descripción</label>
          <textarea
            name="description"
            rows="3"
            placeholder="Escribe una descripción"
            class="form-control rounded-0 bg-dark text-white"
          >{{task.description}}</textarea>
          <button class="btn btn-primary btn-sm mt-2">Editar</button>
        </form>
      </div>
    </div>
  </div>
</div>