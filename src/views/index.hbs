<form action="/tasks/add" method="post">

  <div>
    <label for="title">Título</label>
    <input
      type="text"
      name="title"
      placeholder="Escribe un título"
      id="title"
    />
  </div>
  <div>
    <label for="description">Descripción de la tarea</label>
    <textarea
      name="description"
      placeholder="Descripción"
      id="description"
    ></textarea>

  </div>

  <button>Añadir</button>

</form>